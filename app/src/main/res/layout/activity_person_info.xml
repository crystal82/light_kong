<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:br="http://schemas.android.com/apk/res-auto"
    android:background="#eeeeee"
    tools:context="com.zsg.jx.lightcontrol.ui.PersonInfoActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/theme"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/relativeLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/personal_info"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:id="@+id/textView"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:id="@+id/btn_back"
            android:background="@color/theme"
            android:src="@drawable/fanhui" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:layout_marginTop="20dp"
        android:background="@android:color/white"
        android:layout_below="@+id/relativeLayout"
        android:layout_alignParentStart="true"
        android:id="@+id/relativeLayout2">

        <com.zsg.jx.lightcontrol.view.BorderRelativeLayout
            android:layout_width="330dp"
            android:layout_height="80dp"
            br:borderColor="#eeeeee"
            br:needBottomBorder="true"
            br:needTopBorder="false"
            br:borderStrokeWidth="5"
            android:layout_centerHorizontal="true"
            android:id="@+id/rl_head">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/personal_head"
                android:id="@+id/textView5"
                android:textSize="16sp"
                android:layout_marginLeft="10dp"
                android:textColor="@android:color/black"
                android:layout_centerVertical="true" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/img_head"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/set_icon" />
        </com.zsg.jx.lightcontrol.view.BorderRelativeLayout>

        <com.zsg.jx.lightcontrol.view.BorderRelativeLayout
            android:layout_width="330dp"
            android:layout_height="50dp"
            android:id="@+id/rl_nickname"
            br:borderColor="#eeeeee"
            br:needBottomBorder="true"
            br:needTopBorder="false"
            br:borderStrokeWidth="5"
            android:layout_below="@+id/rl_head"
            android:layout_centerHorizontal="true" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/personal_nickname"
                android:id="@+id/textView6"
                android:textSize="16sp"
                android:layout_marginLeft="10dp"
                android:textColor="@android:color/black"
                android:layout_centerVertical="true" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nosetting_nickname"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:id="@+id/nickname"
                android:layout_centerVertical="true"
                android:padding="10dp"
                android:layout_toLeftOf="@+id/imageView6"
                />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/imageView6"
                android:src="@drawable/leftoff"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true" />
        </com.zsg.jx.lightcontrol.view.BorderRelativeLayout>

        <com.zsg.jx.lightcontrol.view.BorderRelativeLayout
            android:layout_width="330dp"
            android:layout_height="50dp"
            android:id="@+id/rl_sex"
            br:borderColor="#eeeeee"
            br:needBottomBorder="true"
            br:needTopBorder="false"
            br:borderStrokeWidth="5"
            android:layout_below="@+id/rl_nickname"
            android:layout_centerHorizontal="true" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/personal_sex"
                android:id="@+id/textView7"
                android:textSize="16sp"
                android:layout_marginLeft="10dp"
                android:textColor="@android:color/black"
                android:layout_centerVertical="true" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nosetting_sex"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:id="@+id/sex"
                android:layout_centerVertical="true"
                android:padding="10dp"
                android:layout_toLeftOf="@+id/imageView7"
                />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/imageView7"
                android:src="@drawable/leftoff"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true" />
        </com.zsg.jx.lightcontrol.view.BorderRelativeLayout>

        <com.zsg.jx.lightcontrol.view.BorderRelativeLayout
            android:layout_width="330dp"
            android:layout_height="50dp"
            android:id="@+id/rl_changepasswprd"
            br:borderColor="#eeeeee"
            br:needBottomBorder="true"
            br:needTopBorder="false"
            br:borderStrokeWidth="5"
            android:layout_below="@+id/rl_sex"
            android:layout_centerHorizontal="true" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/personal_password"
                android:id="@+id/textView8"
                android:textSize="16sp"
                android:layout_marginLeft="10dp"
                android:textColor="@android:color/black"
                android:layout_centerVertical="true" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/imageView8"
                android:src="@drawable/leftoff"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true" />
        </com.zsg.jx.lightcontrol.view.BorderRelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:background="@android:color/white"
        android:layout_below="@+id/relativeLayout2"
        android:layout_alignParentStart="true"
        android:id="@+id/relativeLayout3">

        <com.zsg.jx.lightcontrol.view.BorderRelativeLayout
            android:layout_width="330dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/view6"
            br:borderColor="#eeeeee"
            br:needBottomBorder="true"
            br:needTopBorder="false"
            br:borderStrokeWidth="5"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/personal_mobile"
                android:id="@+id/textView9"
                android:textSize="16sp"
                android:layout_marginLeft="10dp"
                android:textColor="@android:color/black"
                android:layout_centerVertical="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mobile_phone"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:id="@+id/mobile"
                android:layout_marginRight="40dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"  />

        </com.zsg.jx.lightcontrol.view.BorderRelativeLayout>

        <com.zsg.jx.lightcontrol.view.BorderRelativeLayout
            android:layout_width="330dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/view7"
            android:layout_below="@+id/view6"
            br:borderColor="#eeeeee"
            br:needBottomBorder="true"
            br:needTopBorder="false"
            br:borderStrokeWidth="5"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/personal_count"
                android:id="@+id/textView10"
                android:textSize="16sp"
                android:layout_marginLeft="10dp"
                android:textColor="@android:color/black"
                android:layout_centerVertical="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/count"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:id="@+id/count"
                android:layout_marginRight="40dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"  />

        </com.zsg.jx.lightcontrol.view.BorderRelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/relativeLayout3"
        android:layout_alignParentStart="true">

        <Button
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:textSize="16sp"
            android:text="@string/writtenoff"
            android:id="@+id/btn_wriitenoff"
            android:textColor="@android:color/white"
            android:background="@drawable/btn_wriitenoff"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>


</RelativeLayout>
