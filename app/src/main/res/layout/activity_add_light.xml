<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="com.zsg.jx.lightcontrol.ui.AddLightActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/rl1"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="添加彩灯"
            android:textColor="@color/theme"
            android:textSize="20sp"
            android:layout_centerVertical="true"
            android:id="@+id/textView22"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:src="@drawable/btn_return"
            android:layout_marginLeft="15dp"
            android:onClick="doBack"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:background="@color/theme"
        android:layout_below="@+id/rl1"
        android:layout_height="1dp"
        android:id="@+id/view">
    </View>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="60dp"
        android:layout_below="@+id/rl1"
        android:id="@+id/rl2"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="彩灯名字:"
            android:layout_marginLeft="10dp"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:layout_centerVertical="true"
            android:id="@+id/textView23"
             />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/editText_name"
            android:layout_marginLeft="6dp"
            android:layout_centerVertical="true"
            android:hint="点击输入名字"
            android:background="@drawable/edittext_shape"
            android:layout_toRightOf="@+id/textView23"
            android:layout_marginRight="10dp"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="60dp"
        android:layout_below="@+id/rl2"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="彩灯编号:"
            android:layout_marginLeft="10dp"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:layout_centerVertical="true"
            android:id="@+id/textView24"
            />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/editText_num"
            android:layout_marginLeft="6dp"
            android:inputType="number"
            android:layout_centerVertical="true"
            android:background="@drawable/edittext_shape"
            android:layout_toRightOf="@+id/textView24"
            android:layout_marginRight="10dp"
            android:hint="点击输入1~255之间编号"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

    <ImageButton
        android:layout_width="240dp"
        android:scaleType="fitXY"
        android:layout_height="35dp"
        android:id="@+id/complete"
        android:background="@android:color/white"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/dialog_guide5" />


</RelativeLayout>
