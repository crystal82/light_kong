<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <ImageView
            android:id="@+id/iv_device_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:src="@drawable/lightoff" />

        <TextView
            android:id="@+id/tv_device_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/iv_device_image"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="3dp"
            android:layout_toEndOf="@+id/iv_device_image"
            android:text="照明"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_online_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/tv_device_type"
            android:layout_below="@+id/tv_device_type"
            android:text="在线0"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_all_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/tv_online_count"
            android:layout_below="@+id/tv_device_type"
            android:layout_marginRight="20dp"
            android:text="设备0"
            android:textSize="13sp" />

    </RelativeLayout>
</RelativeLayout>