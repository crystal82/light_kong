<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <View
            android:id="@+id/group_line2"
            android:layout_width="2dp"
            android:layout_height="20dp"
            android:layout_marginLeft="45dp"
            android:background="#636363" />
        <ImageView
            android:id="@+id/iv_alllight"
            android:layout_width="40dp"
            android:layout_marginLeft="25dp"
            android:layout_height="40dp"
            android:src="@drawable/lighton"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="未命名1"
            android:textSize="12sp"
            android:layout_marginLeft="10dp"
            android:textColor="@android:color/black"
            android:layout_toRightOf="@+id/iv_alllight"
            android:id="@+id/light_name"
            android:layout_marginBottom="14dp"
            android:layout_alignParentBottom="true"
           />

        <CheckBox
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/light_check"
            android:clickable="false"
            android:button="@drawable/check_state"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="20dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>
</LinearLayout>